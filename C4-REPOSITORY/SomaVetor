class SomaVeto
{

  static int N, i = 0;
  static double soma , media = 0.0;
  static double [] vet;

static void Main(string[] args){

 Console.WriteLine("Quantos numeros voce vai digitar ?");
 N = int.Parse(Console.ReadLine());

 digitarNumeros();

 Console.WriteLine("VALORES = ");
 somaVetores(vet);

 somarMedia(vet);

 CultureInfo culture = new CultureInfo("pt-BR");

   Console.WriteLine($"SOMA = {soma.ToString("F2",culture)}");
   Console.WriteLine($"MÃ‰DIA = {media.ToString("F2",culture)}"); 


  }

  static void digitarNumeros(){

    vet = new double[N];

    for(i = 0; i < N; i++){
      Console.WriteLine("Digite um numero");
      vet[i] = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);

    }
  }

  static double somaVetores(double[] vet){

    soma = 0.0;

for(i = 0; i < vet.Length; i++)
{
     Console.WriteLine(vet[i].ToString("F1", CultureInfo.InvariantCulture));
     soma += vet[i];

    
}
 return soma;
  }

  static double somarMedia(double[] vet){

    media = 0.0;

    for(i = 0; i < vet.Length; i++){
        Console.WriteLine(vet[i]);
        media += vet[i] / N;
    }
    return media;

  }
}